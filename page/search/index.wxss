/* page/search/index.wxss */
.wrapper{
  width: 100%;
  height: 100%;
}
.search{
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: white;
  position: relative;
  border: 1px solid #eee;
  border-left: none;
  border-right: none; 
  box-sizing: border-box;
}
.search input{
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translate(0, -50%);
  padding-left: 50rpx; 
}
.search text{
  margin-left: 40rpx;
  color: #eee;
  font-size: 30rpx;
}
.search .cancel{
  position: absolute;
  right: 30rpx;
}
.size{
  font-size: 25rpx;
}

.show{
  width: 100%;
  margin-top: 30rpx;
}
.show .showlist{
  width: 100%;
  height: 150rpx;
  border-bottom: 2px solid #ddd;
  background-color: white;
  padding: 13rpx 30rpx;
  box-sizing: border-box;
  display: flex;
}
.show .showlist .img{
  width: 80rpx;
  height: 120rpx;
}
.show .showlist .img image{
  width: 100%;
  height: 100%;
}
.show .showlist .showmain{
  width: 80%;
  /* height: 100rpx; */
  margin-left: 20rpx;
  /* margin-top: 18rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.show .showlist .showmain view:nth-of-type(1){
  font-weight: 700;
}
.show .showlist .showmain view:nth-of-type(2){
  font-size: 30rpx;
  color: #ccc;
  margin-top: 5rpx;
  font-weight: 400;
}