/* page/info/index.wxss */
.wrapper{
  width: 100%;
  height: 100%;
  background: white;
}
.top{
  width: 100%;
  height: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #eee;
}
.top .img{
  width: 40%;
  height: 90%;
}
.top .img image{
  width: 100%;
  height: 100%;
}
.main{
  width: 100%;
  box-sizing: border-box;
  margin-top: 30rpx;
  padding: 20rpx;
  text-align: center;
}
.main text{
  display: block;
  font-size: 29rpx;
  color: #ccc;
}
.main text:nth-of-type(1){
  font-size: 36rpx;
  font-weight: 500;
  color: black
}
.btn{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 30rpx;
}
.btn view{
  border: 2px solid orange;
  color: orange;
  padding: 15rpx 40rpx;
  border-radius: 5px;
}
.foot{
  width: 100%;
  margin-top: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.foot text{
  display: block;
}
.foot text:nth-of-type(1){
  font-size: 29rpx;
  color: #ccc;
  font-weight: 600;
}
.foot text:nth-of-type(2){
  height: 100rpx;
  font-size: 25rpx;
  color: black;
  text-indent: 2em;
  overflow: hidden;
}
.foot .b{
  color: green;
  font-size: 25rpx;
  margin-top: 10rpx;
}
.foot text.open{
  height: 190rpx;
}